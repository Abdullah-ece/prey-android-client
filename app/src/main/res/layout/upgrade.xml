<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">
    <ImageView
        android:id="@+id/screen_wait"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_app_loading_image"
        android:src="@drawable/wait"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/black"
        android:id="@+id/linear_black"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/larr"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="@string/text_upgrade_back"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="Avenir Next LT Pro"
            android:textColor="@color/white"
            android:gravity="center_vertical" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/image_logo"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear_black"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/layout_upgrade_title_pro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="Avenir Next LT Pro"
        android:id="@+id/text_title_pro"
        android:layout_below="@+id/image_logo"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/text_title_pro"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_borde1"  />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:id="@+id/linear_text1"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_borde1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_devices" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:fontFamily="Avenir Next LT Pro"
            android:gravity="center_vertical"
            android:text="@string/text_upgrade_devices" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:id="@+id/linear_text2"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_multiple_os" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:fontFamily="Avenir Next LT Pro"
            android:gravity="center_vertical"
            android:text="@string/text_upgrade_os" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:id="@+id/linear_text3"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_report" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:fontFamily="Avenir Next LT Pro"
            android:gravity="center_vertical"
            android:text="@string/text_upgrade_report" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/linear_text3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_borde2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:id="@+id/linear_foot"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/button_upgrade_monthly"
            android:layout_weight="1"
            android:id="@+id/button_monthly"
            android:background="#3578BB"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="Avenir Next LT Pro"
            android:layout_marginRight="10dp"
            android:onClick="onUpgradeMonthlyAppButtonClicked"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/button_upgrade_yearly"
            android:layout_weight="1"
            android:id="@+id/button_yearly"
            android:layout_marginLeft="10dp"
            android:background="#3578BB"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="Avenir Next LT Pro"
            android:onClick="onUpgradeYearlyAppButtonClicked" />
    </LinearLayout>

</RelativeLayout>