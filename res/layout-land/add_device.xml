<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg" >

    <TextView
        android:id="@+id/add_device_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/log_in_to_prey_h1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darker_txt" />

    <EditText
        android:id="@+id/add_device_email"
        style="@style/WideTextInput"
        android:layout_below="@+id/add_device_title"
        android:hint="@string/your_prey_email"
        android:inputType="textEmailAddress"
        android:text="cyaconi@gmail.com" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/add_device_pass"
        style="@style/WideTextInput"
        android:layout_below="@+id/add_device_email"
        android:hint="@string/your_prey_pass"
        android:inputType="textPassword"
        android:text="qweqwe" >
    </EditText>

    <ImageView
        android:id="@+id/img_bg_mountains"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/mountains_wide" />

    <Button
        android:id="@+id/add_device_btn_ok"
        style="@style/PreyButton"
        android:layout_below="@+id/add_device_pass"
        android:layout_marginTop="20dp"
        android:text="@string/add_this_device" />

</RelativeLayout>