<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg" >

    <include layout="@layout/header_land" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/login_btn_cp"
            style="@style/PreyButton"
            android:layout_above="@+id/login_btn_settings"
            android:text="@string/login_cp" />

        <Button
            android:id="@+id/login_btn_settings"
            android:layout_alignParentBottom="true"
            style="@style/PreyButton"
            android:layout_marginTop="5dp"
            android:text="@string/manage_prey_settings"
             />
    </RelativeLayout>

</RelativeLayout>