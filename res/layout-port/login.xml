<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg" >

    <include layout="@layout/header_port" />

    <Button
        android:id="@+id/login_btn_cp"
        style="@style/PreyButton"
        android:layout_above="@+id/login_btn_settings"
        android:text="@string/login_cp" />

    <Button
        android:id="@+id/login_btn_settings"
        style="@style/PreyButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/goto_settings" />

</RelativeLayout>