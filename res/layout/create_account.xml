<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:scrollbars="vertical" android:background="@drawable/border" 
	android:layout_height="wrap_content" 
	android:padding="0dp" android:layout_width="280dp" android:layout_margin="10dp" android:layout_gravity="center_horizontal|center_vertical">

	
	<!-- Data entry layout -->
	<ScrollView android:id="@+id/ScrollView01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_margin="0dp">
	
	
	
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/LinearLayoutData"
		android:orientation="vertical"
		android:layout_width="fill_parent">
		
	<!-- Title Layout -->
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/LinearLayoutTitle" android:layout_width="fill_parent">
		<ImageView android:id="@+id/ImageView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/logo"
			android:paddingTop="5dp" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"></ImageView>
		<TextView android:id="@+id/TextView01" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:text="@string/set_new_user_dialog_title"
			android:paddingRight="10dp" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical" android:paddingLeft="10dp"></TextView>
	</LinearLayout>
		
	<View android:id="@+id/divider"
    android:background="@drawable/gradient_line"
    android:layout_width="fill_parent"
    android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    
	<TextView android:id="@+id/username_label" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip" android:text="@string/set_new_user_dialog_name"
		android:gravity="left" android:paddingTop="10dp" android:textAppearance="?android:attr/textAppearanceMedium"/>
	
	
		
	<EditText android:id="@+id/set_new_user_dialog_name_edit"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
		android:scrollHorizontally="true" android:gravity="fill_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:inputType="textPersonName" android:lines="1"
		android:imeOptions="actionNext" android:layout_marginBottom="3dip"/>

	<TextView android:id="@+id/email_view" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/set_new_user_dialog_email"
		android:gravity="left" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="20dip" android:width="200dp"/>

	<EditText android:id="@+id/set_new_user_dialog_email_edit"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginRight="20dip" android:layout_marginLeft="20dip"
		android:scrollHorizontally="true" android:gravity="fill_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:inputType="textEmailAddress" android:lines="1"
		android:imeOptions="actionNext" android:layout_marginBottom="3dip"/>

	<TextView android:id="@+id/password_view"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
		android:text="@string/set_new_user_dialog_password" android:gravity="left" android:textAppearance="?android:attr/textAppearanceMedium"/>

	<EditText android:id="@+id/set_new_user_dialog_password_edit"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
		android:scrollHorizontally="true" android:gravity="fill_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:inputType="textPassword" android:lines="1" android:imeOptions="actionSend" android:layout_marginBottom="15dip"/>
	
		<!-- Button Layout -->
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/LinearLayoutButtons" android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:background="#CCC" android:gravity="center_vertical|center_horizontal|center" android:paddingTop="4dp" android:paddingBottom="1dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_marginBottom="3dp">
		<Button android:text="@string/set_new_user_dialog_create"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
			android:id="@+id/ButtonCreateAccount" android:gravity="center_vertical|center_horizontal|center"></Button>
	</LinearLayout>
	
	</LinearLayout>
	</ScrollView>
	




</LinearLayout>